<h3>Wallet</h3>
@page "/wallet"
@using MudBlazor
@inject HttpClient HttpClient

<PageTitle>All wallets</PageTitle>

<br/>
<br/>

<MudTable Items="@wallets">
    <HeaderContent>
        <MudTh>Type</MudTh>
        <MudTh>Amount</MudTh>
        <MudTh>Currency</MudTh>
    </HeaderContent>
    <RowTemplate>
        <MudTd>@context.Type</MudTd>
        <MudTd>@context.Amount</MudTd>
        <MudTd>@context.Currency.Name</MudTd>

    </RowTemplate>
</MudTable>


@code {
    private List<Endava.TechCourse.BankApp.Domain.Models.Wallet> wallets;

    protected override async Task OnInitializedAsync()
    {
        string port = "localhost:5132";
        wallets = await HttpClient.GetFromJsonAsync<List<Endava.TechCourse.BankApp.Domain.Models.Wallet>>($"http://{port}/api/wallet/getwallets");
    }
}
