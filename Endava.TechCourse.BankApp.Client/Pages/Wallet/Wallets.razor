@inject NavigationManager NavigationManager
@inject HttpClient HttpClient
@page "/wallets"

<PageTitle>Bank App</PageTitle>

@if (wallets == null)
{
    <MudText>Loading...</MudText>
}
else
{
    <MudItem>
        <MudButton Href="/wallets/create-wallet" Variant="Variant.Filled" Color="Color.Primary">
            ADD NEW WALLET
        </MudButton>
    </MudItem>
    <MudTable Items="@wallets" Hover="true" Bordered="true" Striped="true">
        <HeaderContent>
            <MudTh>Type</MudTh>
            <MudTh>Amount</MudTh>
            <MudTh>Currency</MudTh>
        </HeaderContent>
        <RowTemplate>
            <MudTd>@context.Type</MudTd>
            <MudTd>@context.Amount</MudTd>
            <MudTd>@context.Currency.Code</MudTd>
            <MudTd>
                <MudIconButton Href=@($"/wallets/{context.Id}") Icon="@Icons.Material.Filled.Preview"/>
                <MudIconButton Href=@($"/wallets/{context.Id}") Icon="@Icons.Material.Filled.Edit"/>
                <MudIconButton Href=@($"/wallets/{context.Id}") Icon="@Icons.Material.Filled.Delete"/>
            </MudTd>
        </RowTemplate>
    </MudTable>
}