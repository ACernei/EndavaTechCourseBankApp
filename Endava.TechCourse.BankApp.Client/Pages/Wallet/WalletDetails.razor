@page "/wallets/{walletId}"

@inject NavigationManager NavigationManager
@inject HttpClient HttpClient

<PageTitle>Bank App</PageTitle>

@if (wallet == null)
{
    <MudText>Loading...</MudText>
}
else
{
    <MudText>Wallet Details</MudText>
    <MudCard Class="mud-card">
        <MudCardContent>
            <MudText>Type: @wallet.Type</MudText>
            <MudText>Amount: @wallet.Amount</MudText>
            <MudText>Currency: @wallet.Currency.Code (@wallet.Currency.Name)</MudText>
            <MudText>Change Rate: @wallet.Currency.ChangeRate</MudText>
            <MudText>Creation Date: @wallet.CreationDate</MudText>

            <MudButton Href="/wallets" Variant="Variant.Filled" Color="Color.Primary">
                Go Back
            </MudButton>
        </MudCardContent>
    </MudCard>
}